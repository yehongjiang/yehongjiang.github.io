                    "sPrevious": " 上一页 ",

                    "sNext": " 下一页 ",

                    "sLast": " 最后一页 "

                },

            }

        });
    });
    //<!--处理文件上传的JS-->
    $(function () {
        $(".input-fileup").on("change", "input[type='file']", function () {
            var filePath = $(this).val();
            if (filePath.indexOf("jpg") != -1 || filePath.indexOf("png") != -1 || filePath.indexOf("JPG") != -1 || filePath.indexOf("PNG") != -1) {
                $(".fileerrorTip1").html("").hide();
                var arr = filePath.split('\\');
                var fileName = arr[arr.length - 1];            
                $(".showFileName1").html(fileName);
                document.getElementById('filename2').value =fileName;
            } else {
                $(".showFileName1").html("");
                $(".fileerrorTip1").html("您未上传文件，或者您上传文件类型有误！").show();
                return false
            }
        })
    })


</script>


