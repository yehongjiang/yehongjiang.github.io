
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>维修预报</title>
    <link rel="stylesheet" href="~/assets/libs/layui/css/layui.css" />
    <link rel="stylesheet" href="~/assets/module/admin.css?v=312" />
    <!--没有下面两个JS则后台javascript返回失效-->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    <!-- 页面加载loading -->
    <div class="page-loading">
        <div class="ball-loader">
            <span></span><span></span><span></span><span></span>
        </div>
    </div>

    <!-- 正文开始 -->
    <div class="layui-fluid">
        <div class="layui-card">
            <div class="layui-card-body">
                <div class="layui-form toolbar">
                    <div class="layui-form-item">
                        <div class="layui-inline">
                            <label class="layui-form-label w-auto">设备：</label>
                            <div class="layui-input-inline mr0">
                                <input name="devicename" class="layui-input" type="text" placeholder="输入设备名称" />
                            </div>
                        </div>
                        <div class="layui-inline">
                            <button class="layui-btn icon-btn" lay-filter="formSubSearchUser" lay-submit>
                                <i class="layui-icon">&#xe615;</i>搜索
                            </button>
                            <button id="btnAddNew" class="layui-btn icon-btn"><i class="layui-icon">&#xe654;</i>添加审批</button>
                            <button id="btnAddNew2" class="layui-btn icon-btn"><i class="layui-icon">&#xe654;</i>添加审核</button>
                        </div>
                    </div>
                </div>

                <table class="layui-table" id="tableUser" lay-filter="tableUser"></table>
            </div>
        </div>
    </div>

    <!-- 表格操作列 -->
    <script type="text/html" id="tableBarUser">
        <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="edit">修改</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
    </script>
    <!-- 表格状态列 -->
    <script type="text/html" id="tableStateUser">
        <input type="checkbox" lay-filter="ckStateUser" value="{{d.userId}}" lay-skin="switch"
               lay-text="正常|锁定" {{d.state==0?'checked':''}} />
    </script>
    <!-- 表单弹窗 -->
    <script type="text/html" id="modelUser">
        <form id="modelUserForm" lay-filter="modelUserForm" class="layui-form model-form">
            <input name="id" type="hidden" />
            <div class="layui-form-item">
                <label class="layui-form-label">设备名称</label>
                <div class="layui-input-block">
                    <select name="device_id" lay-verType="tips" lay-verify="required">
                        @{
                            foreach (var item in ViewBag.DeviceName.Keys)
                            {
                                <option value=@item>@ViewBag.DeviceName[item]</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">原点位名</label>
                <div class="layui-input-block">
                    <input name="old_point" placeholder="请输入原点位名" type="text" class="layui-input" maxlength="20"
                           lay-verType="tips" lay-verify="required" required />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">新点位名</label>
                <div class="layui-input-block">
                    <input name="new_point" placeholder="请输入新点位名" type="text" class="layui-input" maxlength="20"
                           lay-verType="tips" lay-verify="required" required />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">所在数据库表</label>
                <div class="layui-input-block">
                    <input name="indatabase" placeholder="请输入数据库表" type="text" class="layui-input" maxlength="20"
                           lay-verType="tips" lay-verify="required" required />
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">数据类型</label>
                <div class="layui-input-block">
                    <select name="point_type" lay-verType="tips" lay-verify="required">
                        <option value="运行状态">运行状态</option>
                        <option value="故障状态">故障状态</option>
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">描述</label>
                <div class="layui-input-block">
                    <input name="describe" placeholder="请输入相应描述" type="text" class="layui-input" maxlength="20"
                           lay-verType="tips" lay-verify="required" required />
                </div>
            </div>
            <div class="layui-form-item text-right">
                <button class="layui-btn layui-btn-primary" type="button" ew-event="closePageDialog">取消</button>
                <button class="layui-btn" lay-filter="modelSubmitUser" lay-submit>保存</button>
            </div>
        </form>
    </script>

    <!-- js部分 -->
    <script type="text/javascript" src="../../assets/libs/layui/layui.js"></script>
    <script type="text/javascript" src="../../assets/js/common.js?v=312"></script>
    <script>
        layui.use(['layer', 'form', 'table', 'util', 'admin','tableX'], function () {
            var $ = layui.jquery;
            var layer = layui.layer;
            var form = layui.form;
            var table = layui.table;
            var util = layui.util;
            var admin = layui.admin;
            var tableX = layui.tableX;
            // 渲染表格
            var insTb = tableX.renderFront({
                elem: '#tableUser',
                url: '/Device/DevicePreRepairListGet',
                page: true,
                cellMinWidth: 100,
                cols: [[
                    { type: 'numbers', title: '#' },
                    { field: 'id', align: 'center', sort: true, title: 'id', hide: true },
                    { field: 'repair_title', sort: true, title: '维修名称' },
                    { field: 'devicename', sort: true, title: '设备名称' },
                    { field: 'device_id', sort: true, title: '设备ID',  hide: true },
                    { field: 'technology_id', sort: true, title: '工艺段ID', hide: true },
                    { field: 'techname', sort: true, title: '工艺段' },
                    { field: 'repair_date', sort: true, title: '维修日期' },
                    { field: 'repair_finsh', sort: true, title: '完工日期' },
                    { field: 'repair_class', sort: true, title: '维修类别' },
                    { field: 'repair_nums', sort: true, title: '设备数量' },
                    { field: 'repair_reasons', sort: true, title: '维修原因' },
                    { field: 'repair_concluson', sort: true, title: '维修结论' },
                    { field: 'repair_join', sort: true, title: '参与人员' },
                    { field: 'repair_consumption', sort: true, title: '消耗情况' },
                    { field: 'repair_mark', sort: true, title: '备注' },
                    { field: 'repair_begin', sort: true, title: '故障/改造时间' },
                    { field: 'repair_starts', sort: true, title: '预计开工日期' },
                    { field: 'repair_consume', sort: true, title: '预计耗时' },
                    { field: 'manager_opinion', sort: true, title: '经理意见' },
                    { field: 'isapproval', sort: true, title: '是否审批' },
                    { field: 'isover', sort: true, title: '是否完工' },
                    { align: 'center', toolbar: '#tableBarUser', title: '操作', minWidth: 200 }
                ]]
            });

            // 添加
            $('#btnAddNew').click(function () {
                showEditModel();
            });

            // 搜索
            form.on('submit(formSubSearchUser)', function (data) {
                insTb.reload({ where: data.field }, 'data');
            });

            // 工具条点击事件
            table.on('tool(tableUser)', function (obj) {
                var data = obj.data;
                var layEvent = obj.event;
                if (layEvent === 'edit') { // 修改
                    showEditModel(data);
                } else if (layEvent === 'del') { // 删除
                    doDel(data.id, data.device_id, data.point_type);
                } else if (layEvent === 'reset') { // 重置密码
                    resetPsw(data.userId, data.nickName);
                }
            });

            // 显示表单弹窗
            function showEditModel(mUser) {
                admin.open({
                    type: 1,
                    title: (mUser ? '修改' : '添加') + '维修',
                    content: $('#modelUser').html(),
                    success: function (layero, dIndex) {
                        $(layero).children('.layui-layer-content').css('overflow', 'visible');
                        // 回显数据
                        form.val('modelUserForm', mUser);
                        // 表单提交事件
                        form.on('submit(modelSubmitUser)', function (data) {
                            var url = mUser ? '/Supcon/SupconPointModify' : '/Supcon/SupconPointSubmit';
                            layer.load(2);
                            //res是返回后台返回的JSON格式内容
                            $.post(url, data.field, function (res) {
                                //console.log(data.field);  //返回修改后的新数据
                                layer.closeAll('loading');
                                if (res.code == 200) {
                                    layer.close(dIndex);
                                    layer.msg(res.msg, { icon: 1 });
                                    insTb.reloadUrl();
                                } else {
                                    layer.msg(res.msg, { icon: 2 });
                                }
                            }, 'json');
                            return false;
                        });
                    }
                });
            }

            // 删除
            function doDel(userId, nickName, temp) {
                layer.confirm('确定要删除“' + nickName + '的' + temp + '”类型吗？', {
                    skin: 'layui-layer-admin',
                    shade: .1
                }, function (i) {
                    layer.close(i);
                    layer.load(2);
                    console.log(userId);
                    $.post('/Supcon/DeleteSupconPoint?id=' + userId, {
                        userId: userId
                    }, function (res) {
                        layer.closeAll('loading');
                        if (res.code == 200) {
                            layer.msg(res.msg, { icon: 1 });
                            insTb.reloadUrl({}, 'data');
                        } else {
                            layer.msg(res.msg, { icon: 2 });
                        }
                    }, 'json');
                });
            }

            // 修改用户状态
            form.on('switch(ckStateUser)', function (obj) {
                layer.load(2);
                $.get('../../json/ok.json', {
                    userId: obj.elem.value,
                    state: obj.elem.checked ? 0 : 1
                }, function (res) {
                    layer.closeAll('loading');
                    if (res.code == 200) {
                        layer.msg(res.msg, { icon: 1 });
                    } else {
                        layer.msg(res.msg, { icon: 2 });
                        $(obj.elem).prop('checked', !obj.elem.checked);
                        form.render('checkbox');
                    }
                }, 'json');
            });

            // 重置密码
            function resetPsw(userId, nickName) {
                layer.confirm('确定要重置“' + nickName + '”的登录密码吗？', {
                    skin: 'layui-layer-admin',
                    shade: .1
                }, function (i) {
                    layer.close(i);
                    layer.load(2);
                    $.get('../../json/ok.json', {
                        userId: userId
                    }, function (res) {
                        layer.closeAll('loading');
                        if (res.code == 200) {
                            layer.msg(res.msg, { icon: 1 });
                        } else {
                            layer.msg(res.msg, { icon: 2 });
                        }
                    }, 'json');
                });
            }

        });
    </script>

    <script type="text/html" id="statechange">



    </script>
</body>
</html>
