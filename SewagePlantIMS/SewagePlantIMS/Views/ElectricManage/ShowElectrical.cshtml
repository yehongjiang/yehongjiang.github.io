@model List<SewagePlantIMS.ViewModels.ShowElectrical>
@{
    Layout = null;
    int i = 0;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>瓯江口污水厂仪表</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>


    <style>
        .carousel .item {
            height: 400px;
            background-color: #777;
        }

        .carousel-inner > .item > img {
            position: absolute;
            top: 0;
            left: 0;
            min-width: 100%;
            height: 400px;
        }
    </style>
</head>
<body>

    <div id="myCarousel" class="carousel slide">

        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                if (@i == 0)
                {
                    <div class="item active">
                        <img src=@item.pic_url onclick="showMaxImg(this)">
                    </div>
                }
                else
                {
                    <div class="item">
                        <img src=@item.pic_url onclick="showMaxImg(this)">
                    </div>
                }
                i++;
            }

        </div>
        <!-- 轮播（Carousel）导航 -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    @foreach (var item in Model)
    {
        <table class="table">
            <tr>
                <td style="width:100px">仪表名称：</td>
                <td>@item.elec_name</td>
            </tr>
            <tr>
                <td>所在工艺段：</td>
                <td>@item.technology_name</td>
            </tr>
            <tr>
                <td>进线端：</td>
                <td>@item.in_port</td>
            </tr>
            <tr>
                <td>出线端：</td>
                <td>@item.out_port</td>
            </tr>
            <tr>
                <td>用途：</td>
                <td>@item.purpose</td>
            </tr>
            <tr>
                <td>备注：</td>
                <td>@Html.Raw(item.remarks)</td>
            </tr>
        </table>
        break;
    }
    <div class="modal fade bs-example-modal-lg text-center" id="imgModal" tabindex="-1" role="dialog" data-toggle="modal" aria-labelledby="myLargeModalLabel" aria-hidden="true">   <div class="modal-dialog modal-lg" style="display:inline-block;width:auto;">       <div class="modal-content">           <div id="imgshow"></div>        </div>      </div>    </div>

</body>
</html>

<script>
    $(function () {
        $('#myCarousel').carousel({
            interval: 3000
        });
    });
    function showMaxImg(obj) { var src = $(obj).attr("src"); $("#imgModal").find("#imgshow").html("<img src='" + src + "' class='carousel-inner img-responsive img-rounded' data-dismiss='modal'>"); $("#imgModal").modal('show'); }

</script>